<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <header>
        <div class="header-upper">
            <div class="container">
                <div class="header-content">
                    <div class="header-logo">
                        <a href="/">
                            <img src="/images/logo.png" alt="AI Newspaper Logo" onerror="this.style.display='none'">
                        </a>
                    </div>
                    <div class="header-branding">
                        <h1><a href="/" id="page-title">Uygur Haber Ajansı</a></h1>
                        <p class="tagline">AI Curated News Just For You</p>
                    </div>
                    <div class="header-widgets">
                        <!-- Future widgets will be added here -->
                    </div>
                </div>
            </div>
        </div>
        <div class="header-lower">
            <div class="container">
                <nav class="nav-container">
                    <ul class="nav-tabs">
                        <% navigation.tabs.forEach(tab=> { %>
                            <li><a href="<%= tab.url %>" class="<%= tab.active ? 'active' : '' %>">
                                    <%= tab.name %>
                                </a></li>
                            <% }); %>
                    </ul>
                </nav>
            </div>
        </div>
    </header>

    <main class="container">
        <% if (news.length===0) { %>
            <div class="no-news">
                <h2>No news available</h2>
                <p>Please check back later or ensure the backend is running.</p>
            </div>
            <% } else { %>
                <div class="news-grid">
                    <% news.forEach((item, index)=> { %>
                        <article class="news-card">
                            <% if (item.image || item.thumbnail) { %>
                                <div class="news-image">
                                    <img src="<%= item.image || item.thumbnail %>" alt="<%= item.title %>"
                                        onerror="this.src='/images/placeholder.jpg'">
                                </div>
                                <% } %>
                                    <div class="news-content">
                                        <h2 class="news-title">
                                            <a href="/news/<%= index %>">
                                                <%= item.title %>
                                            </a>
                                        </h2>
                                        <p class="news-date">
                                            <%= item.published %>
                                        </p>
                                        <% if (item.summary) { %>
                                            <p class="news-summary">
                                                <%= item.summary %>
                                            </p>
                                            <% } %>
                                                <a href="/news/<%= index %>" class="read-more">Read More →</a>
                                    </div>
                        </article>
                        <% }); %>
                </div>
                <% } %>
    </main>

    <footer>
        <div class="container">
            <p>&copy; 2025 AI Newspaper. All rights reserved.</p>
        </div>
    </footer>

    <script>
        // Navigation configuration from server
        // tab çalışmıyo hatası " <% -" bunda oluyor "<%-" olacak
        // hata bura
         const navigationTabs = <%- JSON.stringify(navigation.tabs) %>;

        // Create hash to page title mapping
        const pageTitleMap = {};
        const browserTitleMap = {};

        navigationTabs.forEach(tab => {
            const hash = tab.url.includes('#') ? tab.url.split('#')[1] : '';
            pageTitleMap[hash] = tab.pageTitle;
            browserTitleMap[hash] = tab.pageTitle + ' - AI Newspaper';
        });

        // Special case for home
        pageTitleMap[''] = 'Uygur Haber Ajansı';
        browserTitleMap[''] = 'Uygur Haber Ajansı - Latest News';

        // Update title, header branding, and active tab based on current hash
        function updateTabState() {
            const currentHash = window.location.hash; // e.g., '#spor' or ''
            const hash = currentHash.replace('#', ''); // e.g., 'spor' or ''

            console.log('Current hash:', currentHash, 'Cleaned:', hash);

            // Update browser title
            document.title = browserTitleMap[hash] || 'Uygur Haber Ajansı - Latest News';

            // Update header branding text
            const pageTitle = document.getElementById('page-title');
            if (pageTitle) {
                pageTitle.textContent = pageTitleMap[hash] || 'Uygur Haber Ajansı';
            }

            // Update active tab
            const navLinks = document.querySelectorAll('.nav-tabs a');
            navLinks.forEach(link => {
                const href = link.getAttribute('href'); // e.g., '/' or '/#spor'
                let linkHash = '';

                if (href.includes('#')) {
                    linkHash = href.split('#')[1]; // e.g., 'spor'
                }

                console.log('Link href:', href, 'Link hash:', linkHash, 'Matches:', linkHash === hash);

                // Remove active class from all
                link.classList.remove('active');

                // Add active class if hashes match
                if (linkHash === hash) {
                    link.classList.add('active');
                    console.log('Activated:', href);
                }
            });
        }

        // Listen for hash changes
        window.addEventListener('hashchange', updateTabState);

        // Update on page load
        updateTabState();
    </script>
</body>

</html>